generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  reviews   Review[]
  readingStatuses ReadingStatus[]
  createdAt DateTime @default(now())
}

model Review {
  id        String   @id @default(uuid())
  bookId    String
  text      String
  rating    Int
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model ReadingStatus {
  id         String   @id @default(cuid())
  bookId     String
  status     String
  format     String?
  pagesRead  Int?
  startedAt  DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  userId     String
  user       User     @relation(fields: [userId], references: [id])

  @@unique([bookId, userId])
}